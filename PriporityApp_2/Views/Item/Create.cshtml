@model PriorityApp.Service.Models.MasterModels.ItemModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/NiceAdmin/_CSLayout.cshtml";

}

<h2>Create Item</h2>

<hr />
<div class="row FormMaindiv">
    <form asp-action="Create" class="CreateForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="QutaCalc" /> @Html.DisplayNameFor(model => model.QutaCalc)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="HMP" /> @Html.DisplayNameFor(model => model.HMP)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="Id" class="control-label">Item Number</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OldItemNumber" class="control-label"></label>
            <input asp-for="OldItemNumber" class="form-control" />
            <span asp-validation-for="OldItemNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
