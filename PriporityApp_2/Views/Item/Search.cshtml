@model PriorityApp.Service.Models.MasterModels.ItemModel

@{
    ViewData["Title"] = "Search";
}
<div id="search">
    <form method="post" asp-action="Search">
        <label for=" name"> Name </label>  <input class="form-control" asp-for="SearchName" /><br />
        <input type="checkbox" asp-for="SearchHPM" /> <label for=" HMP"> HMP </label> <br />
        <label for=" name"> Created Date </label>  <input type="datetime-local" asp-for="SearchCreatedDate" /><br />
        <label for=" name"> Updated Date </label>  <input type="datetime-local" asp-for="SearchUpdatedDate" />
        <button type="submit">Search</button>
    </form>

</div>
<br />
<div style="background-color:beige; width:1000px">
    <h1>Index</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.QutaCalc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HMP)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OldItemNumber)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model.itemModels)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QutaCalc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HMP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OldItemNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                        <td>
                            <a class="far fa-edit btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
