@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SalesLayout.cshtml";
    int priorityQuantity = 0;
    int priorityId = 0;
}
<script src="/lib/jquery/dist/jquery.js"></script>
