@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/NiceAdmin/_CSLayout.cshtml";
    //Layout = "~/Views/Shared/_PendLayout.cshtml";
 }
<h2>Upload Orders</h2>

<div class="text-center uploadOrdersDiv">
    <form asp-controller="Pend" asp-action="Index" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6">
                <input type="file" name="postedFile" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-6 mt-3">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
