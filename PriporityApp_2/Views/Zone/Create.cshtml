@model PriorityApp.Service.Models.MasterModels.ZoneModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h1>Create</h1>

<h4>Zone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerritoryId" class="control-label">Territory</label>
                <select asp-for="TerritoryId" class="form-control" asp-items="@(new SelectList(Model.Territories, "Id","Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsVisible" class="control-label">Active</label>
                @*<input asp-for="IsVisible" class="form-control" />*@
                <select asp-for="IsVisible" class="form-control" asp-items="@(new SelectList(new List<bool> { true, false}))"></select>
                <span asp-validation-for="IsVisible" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
